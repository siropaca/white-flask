{
  "name": "white-flask",
  "version": "1.0.0",
  "private": true,
  "description": "Personal blog site with admin panel",
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "pnpm run --parallel dev",
    "lint": "pnpm run -r lint",
    "lint:fix": "pnpm run -r lint:fix",
    "ncu": "pnpm dlx npm-check-updates --workspaces",
    "pre-commit": "lefthook run pre-commit",
    "prepare": "lefthook install",
    "sort": "sort-package-json 'package.json' 'apps/*/package.json'",
    "sort:check": "sort-package-json --check 'package.json' 'apps/*/package.json'",
    "test": "pnpm run -r test",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "eslint": "8.56.0",
    "lefthook": "1.11.13",
    "sort-package-json": "3.2.1"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=24.2.0",
    "pnpm": ">=10.12.1"
  }
}
